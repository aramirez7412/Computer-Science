#include "Header.h"

/*******************************************************************************
 * CircleOperations
 * -----------------------------------------------------------------------------
 * This function takes the user into a menu specific to perform operations with
 * a circle
 * -----------------------------------------------------------------------------
 * POST-CODNDITIONS
 *
 * CylinderType Class must be previously defined
 * CircleMenu() must be previously defined
 *
 * cyl: Used to for output and must be previously defined
 *
 * RETURNS none
 *******************************************************************************/
void CircleOperations(CylinderType & cyl)//IN & OUT & CALC
{
	//D E C L A R A T I O N S
	int menuChoice;

	CircleMenu(cyl);
	menuChoice = int(PromptUserForIntInput("Please enter a menu option: ", 0, 5,
			         "***Please enter a NUMBER***",
			         "***Please enter a number between 0 and 5"));

	while(menuChoice != 0)
	{
		switch(menuChoice)
		{
		case 0:
			break;
		case 1: cout << "\nThe area is " << cyl.Area();
			break;
		case 2: cout <<  "\nThe circumference is " << cyl.Circumference();
			break;
		case 3: cyl.PrintAll();
			break;
		case 4: ModifyRadius(cyl);
			break;
		case 5: //Go to cylinder
			break;
		}
		CircleMenu(cyl);
		menuChoice = PromptUserForIntInput("Please enter a menu option: ", 0, 5,
						 "***Please enter a NUMBER***",
						 "***Please eneter a number between 0 and 5");

	}














}
