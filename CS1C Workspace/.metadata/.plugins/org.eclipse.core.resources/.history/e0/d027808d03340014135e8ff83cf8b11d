#include "Header.h"

int PromptUserForIntInput(string prompt,
						  int min,
						  int max,
						  string errorMessage,
						  string errorMessage2)
{
	int userInput;
	ostringstream out;
	string errorMessage3;
	int width;
	bool proceed;

	do
	{
		proceed = true;

		cout << prompt;

		if(!(cin >> userInput))
		{
			cin.clear();
			cout << errorMessage;
		}
		else if(userInput < min && userInput > max)
		{
			out << "***" << userInput << " is not valid input***";
			errorMessage3 = out.str();

			out.str("");

			if(errorMessage3.length() > errorMessage2.length())
			{
				width = errorMessage3.length();
			}
			else
			{
				width = errorMessage2.length();
			}

			cout << setw(width) << errorMessage3 << "****";
			cout << setw(width) << errorMessage2 << "****";
		}
		else
		{
			proceed = false;
		}
	}while(proceed);

	return userInput;
}
