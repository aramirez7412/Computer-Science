void MainMenu(CylinderType cyl)
{
	cout << "Current Radius " << cyl.GetRadius() << endl;
	cout << "1 - Circle Operations"   << endl;
	cout << "2 - Cylinder Operations" << endl;
	cout << "3 - Change Radius"		  << endl;
	cout << "4 - Exit Program"		  << endl;
}

