{	cout << "Current Radius " << cyl.GetRadius() << endl;
	cout << "1 - Calculate Area"            << endl;
	cout << "2 - Calculate Circumference"   << endl;
	cout << "3 - Enter new radius" 		    << endl;
	cout << "4 - Go to Cylinder Operations" << endl;
	cout << "4 - Exit To Main Menu"         << endl;
}

