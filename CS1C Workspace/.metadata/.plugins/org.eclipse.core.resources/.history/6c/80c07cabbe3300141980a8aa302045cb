#include "Header.h"

int PromptUserForIntInput(string prompt,
						  int min,
						  int max,
						  string errorMessage)
{
	int userInput;
	ostringstream out;
	string errorMessage2;
	string errormessage3;

	do
	{
		cout << prompt;

		if(!(cin >> userInput))
		{
			cin.clear();
			cout << errorMessage;
		}
		if(userInput < min && userInput > max)
		{
			out << "***" << userInput << " is not valid input***";
			errorMessage2 = out.str();

			out.str("");


		}
	}
}
