#ifndef CARDCLASS_H_
#define CARDCLASS_H_

#include "DeckClass.h"
#include <string>
using namespace std;

class Card
{
	public:
	//C O N S T R U C T O R & D E S T R U C T O R
	/***************************************************************************
	 * Card (constructor)
	 * -------------------------------------------------------------------------
	 */
	Card();
	Card(string newSuit, int rank);
	~Card();

	//M U T A T O R S
	void   SetAll(string newSuit, int rank);
	void   SetSuit(string newSuit);
	void   SetRank(int newRank);

	//A C C E S S O R S
	void   PrintCard() const;
	string GetSuit()   const;
	int    GetRank()   const;

	private:
	string suit;
	int    rank;

};



#endif /* CARDCLASS_H_ */
